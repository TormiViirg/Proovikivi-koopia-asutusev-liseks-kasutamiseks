<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/error-popup.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

    <title>Login</title>
</head>
<body>
    <img src="/img/proovikivi_logo.png" alt="Proovikivi logo" class="pageLogo">

    <div class="container">

        <!-- The Modal -->
        <div id="errorModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h4 id="modalMessage"></h4>
            </div>
        </div>

        <% if (typeof errorMessage !== 'undefined') { %>
            <script>
                document.addEventListener("DOMContentLoaded", function() {
                    var modal = document.getElementById("errorModal");
                    var span = document.getElementsByClassName("close")[0];
                    var message = "<%= errorMessage %>";
                    document.getElementById("modalMessage").innerText = message;
                    modal.style.display = "block";

                    span.onclick = function() {
                        modal.style.display = "none";
                    };

                    window.onclick = function(event) {
                        if (event.target == modal) {
                            modal.style.display = "none";
                        }
                    };
                });
            </script>
        <% } %>

        <h2>Logi sisse</h2>

        <form action="/login" method="POST">
            <div class="dataContainer">
                <label for="loginEmail">E-post</label>
                <input type="email" name="loginEmail" id="loginEmail" placeholder="nÃ¤ide@email.com" required>
            </div>
            <div class="dataContainer">
                <label for="passwordInput">Parool</label>
                <input type="password" name="passwordInput" id="passwordInput" required>
            </div>
            <a href="/passwordReset" class="forgotPwdLink">Unustasin parooli</a>
            <button type="submit" class="loginBtn">Logi sisse</button>

            <div class="dataContainer">
                <div class="create-account-container">
                    <span>
                        Esimest korda siin?
                        <a href="/signup" class="signupLink">Loo konto <i class="fa-solid fa-arrow-right"></i></a>
                    </span>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
