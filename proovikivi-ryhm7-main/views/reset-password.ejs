<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/password-recovery.css">
    <link rel="stylesheet" href="/css/error-popup.css">

    <title>Parooli taastamine</title>
</head>
<body>
    <img src="/img/proovikivi_logo.png" alt="Proovikivi logo" class="pageLogo">
    
    <form method="post" action="/passwordReset/reset" class="formContainer">

        <h1>Parooli taastamine</h1>

        <input type="hidden" name="email" value="<%= email %>">
        <input type="hidden" name="verificationCode" value="<%= verificationCode %>">
        <label for="newPassword">Uus parool:</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <label for="confirmPassword">Kinnita uus parool:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
        <button type="submit" class="submitButton">Taasta parool</button>

    </form>

    <!-- The Modal -->
    <div id="errorModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h4 id="modalMessage"></h4>
        </div>
    </div>

    <% if (typeof errorMessage !== 'undefined') { %>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                var modal = document.getElementById("errorModal");
                var span = document.getElementsByClassName("close")[0];
                var message = "<%= errorMessage %>";
                document.getElementById("modalMessage").innerText = message;
                modal.style.display = "block";

                span.onclick = function() {
                    modal.style.display = "none";
                };

                window.onclick = function(event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                };
            });
        </script>
    <% } %>
</body>
</html>
