<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/verify-code.css">
    <link rel="stylesheet" href="/css/error-popup.css">

    <script src="/script/verify-code.js" defer></script>

    <title>E-posti kinnitamine</title>
    <style>
    </style>
</head>
<body>
    <img src="/img/proovikivi_logo.png" alt="Proovikivi logo" class="pageLogo">

    <div class="container">

        <form method="post" action="/passwordReset/verify" class="verification-form">
            <h1>E-posti kinnitamine</h1>
            <input type="hidden" name="email" value="<%= email %>">
            <div class="code-container">
                <input type="text" id="code1" name="code1" maxlength="1" required>
                <input type="text" id="code2" name="code2" maxlength="1" required>
                <input type="text" id="code3" name="code3" maxlength="1" required>
                <input type="text" id="code4" name="code4" maxlength="1" required>
                <input type="text" id="code5" name="code5" maxlength="1" required>
                <input type="text" id="code6" name="code6" maxlength="1" required>
            </div>
            <div class="buttonContainer">
                <button type="back" onclick="window.history.back()" class="backButton">Tagasi</button>
                <button type="submit" class="submitButton">Kinnita</button>
            </div>
            
        </form>

        <!-- The Modal -->
    <div id="errorModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h4 id="modalMessage"></h4>
        </div>
    </div>

    <% if (typeof errorMessage !== 'undefined') { %>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                var modal = document.getElementById("errorModal");
                var span = document.getElementsByClassName("close")[0];
                var message = "<%= errorMessage %>";
                document.getElementById("modalMessage").innerText = message;
                modal.style.display = "block";

                span.onclick = function() {
                    modal.style.display = "none";
                };

                window.onclick = function(event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                };
            });
        </script>
    <% } %>

    </div>




</body>
</html>